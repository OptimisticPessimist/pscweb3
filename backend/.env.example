# 環境変数設定例

# データベース
DATABASE_URL="postgresql+asyncpg://user:pass@localhost/dbname"

# Discord OAuth
DISCORD_CLIENT_ID="your_discord_client_id"
DISCORD_CLIENT_SECRET="your_discord_client_secret"
DISCORD_REDIRECT_URI="https://your_domain.com/auth/callback"  # 本番環境のURL
DISCORD_BOT_TOKEN="your_discord_bot_token"
DISCORD_PUBLIC_KEY="your_discord_public_key"
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."

# Frontend URL
FRONTEND_URL="https://your_frontend_domain.com"

# JWT Secret (強力なランダム文字列を使用)
JWT_SECRET_KEY="generate_a_very_strong_random_string_here"

# Session Secret (JWT Secretとは別の値)
SESSION_SECRET_KEY="another_strong_random_string_for_sessions"

# 環境 (development, staging, production)
ENVIRONMENT="development"

# CORS設定 (本番環境用、カンマ区切り)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
